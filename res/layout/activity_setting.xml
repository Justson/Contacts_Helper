<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/header_setting_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3d77c0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_setting_linearlayout"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
              />

        <TextView
            android:id="@+id/setting_setting_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16sp"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <com.qypt.just_syn_asis_version1_0.custom_view.SettingLinearLayout
        android:id="@+id/settingLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/setting_syn_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:focusable="true" >

            <ImageView
                android:id="@+id/syn_setting_imageview"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:text="同步设置"
                android:textColor="#999999"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="60dp"
            android:background="#999999" />

        <RelativeLayout
            android:id="@+id/remind_syn_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#50ffffff"
            android:focusable="true" >

            <ImageView
                android:id="@+id/remind_setting_imageview"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="#50ffffff"
                 />

            <TextView
                android:id="@+id/remind_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/remind_setting_imageview"
                android:textColor="#999999"
                android:text="提醒"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/yin_setting_imageview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                 />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="60dp"
            android:background="#999999" />

        <LinearLayout
            android:id="@+id/more_syn_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#00ffffff"
            android:focusable="true" >

            <ImageView
                android:id="@+id/more_setting_imageview"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="#50ffffff"
                  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:text="多语言"
                android:textColor="#999999"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="60dp"
            android:background="#999999" />

        <LinearLayout
            android:id="@+id/question_syn_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#eeffffff"
            android:focusable="true" >

            <ImageView
                android:id="@+id/question_setting_imageview"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="#50ffffff"
                  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:text="我有问题"
                android:textColor="#999999"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="60dp"
            android:background="#999999" />

        <LinearLayout
            android:id="@+id/guanyu_syn_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#50ffffff"
            android:focusable="true" >

            <ImageView
                android:id="@+id/about_setting_imageview"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="#50ffffff"
                  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:text="关于"
                android:textColor="#999999"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="60dp"
            android:background="#999999" />
    </com.qypt.just_syn_asis_version1_0.custom_view.SettingLinearLayout>

</LinearLayout>