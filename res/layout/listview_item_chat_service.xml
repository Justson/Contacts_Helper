<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tem_sample_color"
     >
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="12dp"
         android:textColor="#999999"
         android:text="2016-5-7 12:00"
         android:textSize="10sp"
         android:id="@+id/chat_item_time_service"
         android:layout_centerHorizontal="true"
         android:background="#33bebebe"/>
     
    <LinearLayout 
        android:layout_below="@+id/chat_item_time_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chat_item_item_service"
        android:orientation="horizontal">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/header_linearlayout_service"
            android:orientation="vertical">
            
            <ImageView 
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/listview_item_image_service"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>
            
            <TextView 
                android:layout_marginLeft="20dp"
                android:layout_width="35dp"
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="客服"
                android:gravity="center"
                />
            
        </LinearLayout>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你好.."
            android:autoText="true"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:id="@+id/chat_item_content_service"
            android:background="@drawable/chatfrom_bg_normal"/>
        
    </LinearLayout>

</RelativeLayout>
