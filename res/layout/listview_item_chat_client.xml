<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tem_sample_color"
     >

    <TextView
        android:id="@+id/chat_item_time_client"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_centerHorizontal="true"
        android:background="#33bebebe"
        android:text="2016-5-7 12:00"
        android:textColor="#999999"
        android:textSize="10sp" />

    <RelativeLayout
        android:id="@+id/chat_item_item_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_item_time_client"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/header_linearlayout_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/listview_item_image_client"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                 />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="我"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/header_linearlayout_client"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/listview_item_content_client_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/chatto_bg_normal"
                android:gravity="center"
                android:text="好的" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>