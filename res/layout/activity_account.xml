<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/header_relativelayout"
        android:background="#3d77c0">
        
        <ImageView 
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/comeback_account"
            android:src="@drawable/lefe"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的账号"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_centerInParent="true"/>
        
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#20f1f1f1"
        android:orientation="vertical">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textSize="12sp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp">
            
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/phone"
                android:id="@+id/account_phone"
                android:layout_marginLeft="15dp"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的账号"
                android:layout_toRightOf="@+id/account_phone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/account_phone_phone_textview"
                android:text="15218486390"
                android:textSize="12sp"
                android:textColor="#3d77c0"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"/>
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp">
            
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/contact_manager"
                android:id="@+id/account_name"
                android:layout_marginLeft="15dp"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的账号"
                android:layout_toRightOf="@+id/account_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/account_name_name_textview"
                android:text="justson"
                android:textSize="12sp"
                android:textColor="#3d77c0"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"/>
            
        </RelativeLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#999999"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="75dp"/>
        
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他"
            android:textSize="12sp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>
        
        
         <LinearLayout 
             android:layout_marginTop="15dp"
             android:layout_width="match_parent"
             android:layout_height="42dp"
             android:id="@+id/operation_account_linearlayout"
             android:orientation="horizontal">
             
             <ImageView 
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_gravity="center_vertical"
                 android:src="@drawable/opration_"
                 android:layout_marginLeft="15dp"/>
             
             
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="操作记录"
                 android:layout_gravity="center_vertical"
                 android:layout_marginLeft="30dp" />
             
         </LinearLayout>
         
         <View 
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#999999"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="75dp"/>
         <FrameLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             >
             
             <Button 
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:background="#ff0000"
                 android:layout_gravity="bottom"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
                 android:layout_marginBottom="25dp"
                 android:text="退出账号"
                 android:id="@+id/out_account_button"
                 android:textColor="#ffffff"/>
             
         </FrameLayout>
        
        
    </LinearLayout>
    
    
    
    
    

</LinearLayout>
